<Window x:Class="TrainingTracker.DatabaseApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Учет тренировок"
        Height="640"
        Width="1150"
        MinHeight="560"
        MinWidth="1000"
        Background="#F3F6FB"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#3D6DEB"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#5C667A"/>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3D6DEB"/>
            <Setter Property="BorderBrush" Value="#3D6DEB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1F000000" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="Foreground" Value="#3D6DEB"/>
        </Style>

        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0F000000" BlurRadius="18" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,12,0,4"/>
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,18">
            <TextBlock Text="Панель тренировок" FontSize="26" FontWeight="Bold" Foreground="#1F2A44"/>
            <TextBlock Text="Добавляйте тренировки, отслеживайте прогресс и анализируйте статистику"
                       Foreground="{StaticResource TextMutedBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Новая тренировка" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Опишите ключевые параметры и сохраните в журнал"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,4,0,12"/>

                    <TextBlock Text="Дата" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="SessionDatePicker"
                                SelectedDate="{x:Static sys:DateTime.Today}"
                                Height="32"/>

                    <TextBlock Text="Тип тренировки" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="TypeComboBox"
                              ItemsSource="{Binding TrainingTypes}"
                              IsEditable="True"
                              Height="32"
                              StaysOpenOnEdit="True"
                              IsTextSearchEnabled="True"/>

                    <TextBlock Text="Длительность (мин)" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="DurationTextBox" Height="32"/>

                    <TextBlock Text="Интенсивность (1-10)" Style="{StaticResource LabelStyle}"/>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="IntensitySlider"
                                Minimum="1"
                                Maximum="10"
                                Value="5"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Grid.Column="0"
                                Margin="0,0,12,0"/>
                        <Border Grid.Column="1"
                                Background="#EEF2FF"
                                CornerRadius="6"
                                VerticalAlignment="Center"
                                Height="32">
                            <TextBlock Text="{Binding ElementName=IntensitySlider, Path=Value, StringFormat=F0}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                        </Border>
                    </Grid>

                    <TextBlock Text="Комментарий" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="NotesTextBox"
                             AcceptsReturn="True"
                             Height="80"
                             TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                        <Button Content="Очистить" Click="OnClearFormClick" Style="{StaticResource GhostButton}" Margin="0,0,12,0"/>
                        <Button Content="Добавить" Click="OnAddSessionClick"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="24,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Экспорт в CSV" Click="OnExportCsvClick" Style="{StaticResource GhostButton}" Margin="0,0,12,0"/>
                        <Button Content="Удалить запись" Click="OnDeleteSessionClick" Style="{StaticResource GhostButton}" Margin="0,0,12,0"/>
                        <Button Content="Обновить статистику" Click="OnRefreshStatsClick"/>
                    </StackPanel>

                    <DataGrid x:Name="SessionsGrid"
                              Grid.Row="1"
                              Margin="0,16,0,0"
                              Height="320"
                              ItemsSource="{Binding Sessions}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              RowBackground="#F8FAFF"
                              AlternatingRowBackground="White"
                              GridLinesVisibility="None"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Binding="{Binding DateFormatted}" Width="100"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="150"/>
                            <DataGridTextColumn Header="Длительность, мин" Binding="{Binding DurationMinutes}" Width="140"/>
                            <DataGridTextColumn Header="Интенсивность" Binding="{Binding Intensity}" Width="120"/>
                            <DataGridTextColumn Header="Комментарий" Binding="{Binding Notes}" Width="*"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="220"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <WrapPanel Grid.Row="2" Margin="0,26,0,0" HorizontalAlignment="Stretch" ItemWidth="260" MinWidth="780">
            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="8">
                <StackPanel>
                    <TextBlock Text="Всего тренировок" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                    <TextBlock x:Name="TotalSessionsText" FontSize="26" FontWeight="Bold" Foreground="#1F2A44"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="8">
                <StackPanel>
                    <TextBlock Text="Всего минут" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                    <TextBlock x:Name="TotalMinutesText" FontSize="26" FontWeight="Bold" Foreground="#1F2A44"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="8">
                <StackPanel>
                    <TextBlock Text="Средняя длительность" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                    <TextBlock x:Name="AverageDurationText" FontSize="26" FontWeight="Bold" Foreground="#1F2A44"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="8">
                <StackPanel>
                    <TextBlock Text="Средняя интенсивность" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                    <TextBlock x:Name="AverageIntensityText" FontSize="26" FontWeight="Bold" Foreground="#1F2A44"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="8">
                <StackPanel>
                    <TextBlock Text="Популярный тип" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                    <TextBlock x:Name="PopularTypeText" FontSize="20" FontWeight="SemiBold" Foreground="#1F2A44"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="8">
                <StackPanel>
                    <TextBlock Text="Тренировок за неделю" Foreground="{StaticResource TextMutedBrush}" FontSize="12"/>
                    <TextBlock x:Name="WeeklySessionsText" FontSize="26" FontWeight="Bold" Foreground="#1F2A44"/>
                </StackPanel>
            </Border>
        </WrapPanel>
        </Grid>
    </ScrollViewer>
</Window>